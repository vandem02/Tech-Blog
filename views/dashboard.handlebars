<h2>New Post</h2>
<form id="form">
  <div class="mb-3">
    <label for="title" class="form-label">Title</label>
    <input type="text" class="form-control" id="title" />
  </div>
  <div class="form-floating mb-3">
    <textarea class="form-control" placeholder="Body" id="floatingTextarea" style="height: 100px"></textarea>
    <label for="floatingTextarea">What would you like to say?</label>
  </div>
  <button class="btn btn-primary">Post</button>
</form>
<h2>Your Posts</h2>
{{#each posts}}
   {{> post this}}
{{else}}
   <p>No posts to show.</p>
{{/each}}
<script src="/js/post.js"></script>